<odoo>
    <!-- Form View -->
    <record id="view_edu_student_form" model="ir.ui.view">
        <field name="name">edu.student.form</field>
        <field name="model">edu.student</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_code" readonly="1"/>
                        <field name="gender"/>
                        <field name="birth_date"/>
                        <field name="parent_id"/>
                        <field name="stage_id"/>
                        <field name="class_id"/>
                        <field name="academic_year_id"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Grades">
                            <field name="grade_ids">
                                <tree editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="exam_type"/>
                                    <field name="score"/>
                                    <field name="max_score"/>
                                    <field name="academic_year_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_edu_student_tree" model="ir.ui.view">
        <field name="name">edu.student.tree</field>
        <field name="model">edu.student</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="student_code"/>
                <field name="gender"/>
                <field name="academic_year_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="SchoolCore.action_edu_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">edu.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_schoolcore_main" model="ir.actions.act_window">
        <field name="name">SchoolCore</field>
        <field name="res_model">edu.stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_schoolcore_root" name="School Management" sequence="10" action="action_schoolcore_main"/>
    <menuitem id="menu_student_main" name="Students" parent="menu_schoolcore_root" sequence="10"/>
    <menuitem id="menu_student" name="Students" parent="menu_student_main" action="SchoolCore.action_edu_student"/>
</odoo>

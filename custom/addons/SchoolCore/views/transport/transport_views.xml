<odoo>
    <record id="view_transport_route_form" model="ir.ui.view">
        <field name="name">edu.transport.route.form</field>
        <field name="model">edu.transport.route</field>
        <field name="arch" type="xml">
            <form string="Transport Route">
                <group>
                    <field name="name"/>
                    <field name="driver_name"/>
                    <field name="vehicle_number"/>
                    <field name="stops"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_transport_route_tree" model="ir.ui.view">
        <field name="name">edu.transport.route.tree</field>
        <field name="model">edu.transport.route</field>
        <field name="arch" type="xml">
            <tree string="Transport Routes">
                <field name="name"/>
                <field name="driver_name"/>
                <field name="vehicle_number"/>
            </tree>
        </field>
    </record>
</odoo>
